<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>
<div class="container at-5">
    <form action="/editarProducto" method="post">
        <div class="card">
            <div class="card-header">
                <h1>Editar Producto</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= product.id %>">
                <input class="form-control mb-3" type="text" value="<%= product.nombre %>" name="nombre" id="nombre" placeholder="Nombre" autofocus >
                <input class="form-control mb-3" type="text" value="<%= product.fecha %>" name="fecha" id="fecha" placeholder="Fecha" >
                <input class="form-control mb-3" type="text" value="<%= product.cantidad %>" name="cantidad" id="cantidad" placeholder="Cantidad" >
                <input class="fomr-control mb-3" type="text" value="<%= product.stock %>" name="stock" id="stock" placeholder="Stock" >
            </div>
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Editar Producto</button>
                <button class="btn btn-secondary" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form>
</div>
