<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>
<div class="container at-5">
    <form action="/nuevoproducto" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Nuevo Producto</h1>
            </div>
            <div class="card-body">
                <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mb-3" type="text" name="fecha" id="fecha" placeholder="Fecha" >
                <input class="form-control mb-3" type="text" name="cantidad" id="cantidad" placeholder="Cantidad" >
                <input class="form-control mb-3" type="text" name="stock" id="stock" placeholder="Stock" >
                <input class="form-control mb-3" type="file" name="foto" id="foto" placeholder="Selecciona una foto">
            </div>
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Guardar Producto</button>
                <button class="btn btn-secondary" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form>
</div>
