<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>
<div class="container at-5">
    <form action="/editarNoticia" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Editar Producto</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= notice.id %>">
                <input type="hidden" name="fotoAnt" id="fotoAnt" value=" <%= notice.foto %> ">
                <input class="form-control mb-3" type="text" value="<%= notice.titulo %>" name="titulo" id="titulo" placeholder="Titulo" autofocus >
                <input class="form-control mb-3" type="text" value="<%= notice.fecha %>" name="fecha" id="fecha" placeholder="Fecha" >
                <input class="form-control mb-3" type="text" value="<%= notice.contenido %>" name="contenido" id="contenido" placeholder="Contenido" >
                <input class="fomr-control mb-3" type="file" name="foto" id="foto" placeholder="Selecciona una foto si desea modificar" >
            </div>
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Editar Noticia</button>
                <button class="btn btn-secondary" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form>
</div>
