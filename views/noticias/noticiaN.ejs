<div class="container at-5">
    <div class="card">
        <div class="card-header">
            <h1>Noticias</h1>
        </div>
        <div class="card-body">

                <tbody>
                    <%
                    noticias.forEach((noticia, j)=>{

                    %>
                    <!--<td style="font-size: 40px;">
                        <center><%= noticia.titulo %></center>
                    </td>

                    <td>Fecha: <%= noticia.fecha %></td><br>
                    <td><img src="/imagesNot/<%= noticia.foto %>" width="200px" alt=""></td>
                    <td><%= noticia.contenido %></td><br><br><br>
                    <td><center>>----------------------------------------------------------------------------------------------------------------<</center></td>
                    -->

                    <div class="acordeon">
                        <input type="radio" name="acordeon" id="btn-acordeon1" class="btn-acordeon">
                        <label for="btn-acordeon1">
                            <td>
                                <td>
                                    <img src="/imagesNot/<%= noticia.foto %>" width="100px" alt="">
                                </td>
                                <%= noticia.titulo %>
                            </td>
                        </label>
                        <div class="contenido-acordeon">
                            <td>Fecha: <%= noticia.fecha %></td><br><br>
                            <td><%= noticia.contenido %></td><br><br>
                        </div>
                    </div>

                    <%
                    });
                    %>
                </tbody>
        </div>
        <div class="card-footer"></div>
</div>

<!-- Estilo CSS (DiseÃ±o) -->

<style>
    @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@400;800&display=swap');
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.contenedor-acordeon{
    width: 100%;
    max-width: 800px;
    margin: auto;
    margin-top: 80px;
}
.contenedor-acordeon h1{
    text-align: center;
    font-size: 40px;
    margin-bottom: 35px;
}
.acordeon{
    background: #fff;
}
.acordeon label{
    display: block;
    padding: 20px;
    font-size: 20px;
    background: #1c1c1c;
    color: #fff;
    cursor: pointer;
    margin-bottom: 2px;
    transition: all 300ms ease;
}
.acordeon label:hover{
    background: #2e2e2e;
}
.acordeon .contenido-acordeon{
    padding: 0px;
    margin: 0px 20px;
    max-height: 0px;
    overflow: hidden;
    transition: all 300ms ease;
}
.btn-acordeon:checked ~ .contenido-acordeon{
    max-height: 600px;
    padding: 15px 0px;
}


</style>

