<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>
<div class="container at-5">
    <form action="/nuevanoticia" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Nueva Noticia</h1>
            </div>
            <div class="card-body">
                <input class="form-control mb-3" type="text" name="titulo" id="titulo" placeholder="Titulo" autofocus>
                <input class="form-control mb-3" type="text" name="fecha" id="fecha" placeholder="Fecha" >
                <input class="form-control mb-3" type="text" name="contenido" id="contenido" placeholder="Contenido" >
                <input class="form-control mb-3" type="file" name="foto" id="foto" placeholder="Selecciona una foto">
            </div>
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Guardar Noticia</button>
                <button class="btn btn-secondary" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form>
</div>
